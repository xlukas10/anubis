<CameraControls>:
    rows: 2
    cols: 6
    canvas.before:
        Color:
            rgba: 0,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    PlayPause:
        #size_hint: self.parent.size_hint * 0.2, 0.2
        #pos_hint: {'y': root.pos_hint_y}
    ZoomIn:

    ZoomOut:

    ZoomFit:

    Zoom100:



<CameraSettings>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        text: 'parameter 1'
    Button:
        text: 'parameter 2'
    Button:
        text: 'parameter 3'
    Button:
        text: 'parameter 4'
    Button:
        text: 'parameter 5'
    Button:
        text: 'parameter 6'
