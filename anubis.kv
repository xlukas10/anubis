<MainMenu>:
    orientation: 'horizontal'
    size_hint_y: 0.15
    pos_hint: {'top':.98}
    id: mainMenu
    MenuButton:
        text: 'Connect camera'
    MenuButton:
        text: 'Open camera/image acquisition'
    MenuButton:
        text: 'Camera settings'
    MenuButton:
        text: 'App settings'
    MenuButton:
        text: 'help'

<MainLayout>:
    MainMenu:
    CameraImage:
        pos_hint: {'x': 0.01, 'top': 0.82}
        size_hint: 0.6, 0.6
    CameraSettings: #in future change for active menu
        pos_hint: {'right': 0.99, 'top': 0.82}
        size_hint: 0.37, 0.81
    CameraControls:
        pos_hint: {'x': 0.01, 'y': 0.01}
        size_hint: 0.6, 0.21
