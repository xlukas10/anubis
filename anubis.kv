<MenuButton>:

<CameraImage>:

<PlayPause>:
    text: 'Play/Pause'

<ZoomIn>:
    text: 'Zoom in'

<ZoomOut>:
    text: 'Zoom out'

<ZoomFit>:
    text: 'Fit to screen'

<Zoom100>:
    text: 'Real size'

<CameraControls>:
    rows: 2
    cols: 6
    canvas.before:
        Color:
            rgba: 0,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    PlayPause:
        #size_hint: self.parent.size_hint * 0.2, 0.2
        #pos_hint: {'y': root.pos_hint_y}
    ZoomIn:

    ZoomOut:

    ZoomFit:

    Zoom100:



<CameraSettings>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        text: 'parameter 1'
    Button:
        text: 'parameter 2'
    Button:
        text: 'parameter 3'
    Button:
        text: 'parameter 4'
    Button:
        text: 'parameter 5'
    Button:
        text: 'parameter 6'
 #   canvas:
  #      color:
   #         rgba: 1, .1, .1, .9

<TabConnectCam>:
    RefreshButton:
        on_release:
            root.detect_cameras()

<MainMenu>:
    orientation: 'horizontal'
    size_hint_y: 0.15
    pos_hint: {'top':.98}
    active_tab: ''
    MenuConnectCam:
        text: 'Connect camera'
        on_release:
            root.active_tab = 'ConnectCamera'
    MenuCamParameters:
        text: 'Camera settings'
        on_release:
            root.active_tab = 'CamParameters'
    MenuOptions:
        text: 'App Options'
        on_release:
            root.active_tab = 'Options'
    MenuButton:
        text: 'Tensorflow'

    MenuHelp:
        text: 'help'
        on_release:
            root.active_tab = 'Help'

<Tabs>:
    pos_hint: {'right': 0.99, 'top': 0.82}
    size_hint: 0.37, 0.99
    #size behaves funky

<TabLayout>:
    row_default_height: 20
    cols: 1
    rows: 6



<MainLayout>:

    Tabs:
        tab: main_menu.active_tab
    MainMenu:
        id: main_menu

    CameraImage:
        id: camera_image
